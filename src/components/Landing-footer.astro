<section class="child-container footer">
    <main>
        <div class="home_newslater">
            <p>JOIN OUR NEWSLATER</p>
            <form>
                <div>
                    <input required type="text" placeholder="Insert your gmail...">
                    <button type="submit">SEND</button>
                </div>
            </form>
        </div>

        <div class="home_social-network">
            <ul>
                <li><a href="#">Instagram</a></li>
                <li><a href="#">Twitter</a></li>
                <li><a href="#">Facebook</a></li>
                <li><a href="#">YouTube</a></li>
            </ul>
        </div>
    </main>

    <div class="home_legal">
        <ul>
            <li><a href="#">ADVERTISING AND COOKIES POLICY</a></li>
            <li><a href="#">CONDITIONS OF PURCHASE</a></li>
        </ul>
    </div>
</section>

<style>
    .footer{
        display: flex;
        flex-flow: column;
        justify-content: end;
        align-items: center;
    }

    .footer main{
        display: flex;
        flex-flow: column;
        height: 80%;
        width: 80%;
        justify-content: center;
    }

    .footer .home_newslater{
        text-align: center;
        font-family: "Century Gothic", -apple-system, serif;
        margin: 2vh auto;
    }

    .footer .home_newslater p{
        margin: 0;
        font-size: 2rem;
    }

    .footer .home_newslater div{
        display: flex;
        flex-flow: row nowrap;
        justify-content: center;
    }

    .footer .home_newslater input{
        height: 5vh;
        padding-left: 1rem;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
        border: 2px solid black;
    }

    .footer .home_newslater button{
        background-color: black;
        color: white;
        height: 5vh;
        padding: 0 10px;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
        border: 2px solid black;
    }

    .footer .home_social-network{
        font-family: Italiana, -apple-system, serif;
        margin: 2vh auto;
        width: 100%;

    }

    .footer .home_social-network ul{
        list-style-type: none;
        display: flex;
        width: 100%;
        justify-content: space-evenly;
        text-align: center;
        padding: 0;
    }

    .footer .home_social-network ul li a{
        text-decoration: none;
        color: black;
        font-size: 2rem;
        font-weight: bold;
    }

    .footer .home_social-network ul li a:hover{
        text-decoration: underline;
    }

    .footer .home_legal{
        width: 65%;
        justify-self: end;
        margin-bottom: 1rem;
    }

    .footer .home_legal ul{
        list-style-type: none;
        width: 100%;
        display: flex;
        flex-flow: row wrap;
        justify-content: space-around;
        margin: 0;
        text-align: center;
        padding: 0;
    }

    .footer .home_legal ul a{
        text-decoration: none;
        color: rgba(0, 0, 0, 0.6);
    }

    .footer .home_legal ul a:hover{
        text-decoration: underline;
    }
</style>